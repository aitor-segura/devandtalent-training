{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2021"],
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "paths": {
      "@config/*": ["../config/*"],
      "@infra/*": ["./infra/*"],
      "@interfaces/*": ["./interfaces/*"],
      "*": ["node_modules"]
    }
  },
  "include": ["src/**/*", "config/**/*", ".babelrc"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
