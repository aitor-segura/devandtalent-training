{
  "name": "devandtalent-training",
  "version": "1.0.0",
  "description": "Fully functional App with a CRUD API, database, auth, cool frontend to manage the information, etc. We call it Dev&Talent!",
  "main": "dist/src/index.js",
  "repository": "https://github.com/aitor-segura/devandtalent-training.git",
  "author": "Aitor Segura <sb_aitor@hotmail.com>",
  "license": "MIT",
  "private": false,
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register src/index.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "build": "rm -rf dist & tsc",
    "start": "yarn build & tsc & node .",
    "dev": "tsc -w & nodemon .",
    "lint": "eslint --fix ./",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "babel-eslint": "^10.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.6.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.15",
    "awilix": "^6.1.0",
    "awilix-express": "^6.0.0",
    "body-parser": "^1.19.2",
    "compression": "^1.7.4",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "rollbar": "^2.24.0",
    "winston": "^3.6.0"
  }
}
